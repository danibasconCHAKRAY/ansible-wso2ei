[Unit]
Description={{ wso2_app }} init script
Requires=network-online.target
After=network-online.target

[Service]
LimitNOFILE=65535
Type=oneshot
User={{ wso2_user }}
Group={{ wso2_group }}
RemainAfterExit=yes

Environment=JAVA_HOME={{java_home}}
Environment=JAVA_OPTS=
Environment=JVM_MEM='{{jvm_mem}}'
PIDFile={{ carbon_home }}/wsp2ei.pid
ExecStart=/etc/init.d/inope-{{ wso2_app }} start
ExecStop=/etc/init.d/inope-{{ wso2_app }} stop
TimeoutSec=120 

[Install]
WantedBy=multi-user.target

